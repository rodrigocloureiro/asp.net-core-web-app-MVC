@model IEnumerable<tp3.Models.Disciplina>

@{
    ViewData["Title"] = "Disciplinas";
}

<h1>Disciplinas</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Criar Novo</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Horas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Professor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Horas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Professor.Nome)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.DisciplinaId">Editar</a>
                <a class="btn btn-success" asp-action="Details" asp-route-id="@item.DisciplinaId">Detalhes</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.DisciplinaId">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
