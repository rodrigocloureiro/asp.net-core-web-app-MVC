@model tp3.Models.Curso

@{
    ViewData["Title"] = "Apagar";
}

<h1>Apagar</h1>

<h3>Tem certeza de que deseja excluir?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @* @Html.DisplayNameFor(model => model.DataInicio) *@
            Data de Início
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataInicio)
        </dd>
        <dt class = "col-sm-2">
            @* @Html.DisplayNameFor(model => model.DataFim) *@
            Data de Término
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataFim)
        </dd>
        <dt class = "col-sm-2">
            @* @Html.DisplayNameFor(model => model.Aluno) *@
            Aluno
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Aluno.Nome)
        </dd>
        <dt class = "col-sm-2">
            @* @Html.DisplayNameFor(model => model.Disciplina) *@
            Disciplina
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Disciplina.Nome)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CursoId" />
        <input type="submit" value="Apagar" class="btn btn-danger" />
        <a class="btn btn-primary" asp-action="Index">Voltar</a>
    </form>
</div>
